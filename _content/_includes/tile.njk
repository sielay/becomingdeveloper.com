{% extends 'card.njk' %}

{% block content %}
<h2 class="text-gray-900 font-bold text-xl mt-2">
    <a href="{{ post.url }}">{{ post.data.title }}</a>
</h2>
<div class="text-gray-700 text-base limited hide-review">{% excerpt post %}… <a href="{{ post.url }}">read more…</a></div>
{% endblock %}

{% block rest %}
<div class="limited limited-low">
{%- for tag in post.data.tags -%}
<a class="inline-block bg-gray-200 rounded-full px-2 py-1 text-gray-800 mr-2 mb-1 text-xs" title="Tag - {{ tag }}" href="/blog/tag/{{ tag | blog_slug }}">#{{ tag }}</a>
{%- endfor -%}
</div>
<div class="flex items-center">
<div class="text-sm">
<p class="text-gray-600">{{ post | readingTime }} min read - {{ post.date | blog_dateformat('LL') }}</p>
</div>
</div>
{% endblock %}